rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == "admin";
    }
    
    function isStaff() {
      return isSignedIn() && firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == "staff";
    }
    
    // Room images
    match /rooms/{fileName} {
      allow read: if true; // Public read access
      allow write: if isAdmin() || isStaff();
    }
    
    // User profile images
    match /users/{userId}/{fileName} {
      allow read: if true;
      allow write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
    }
    
    // Default rule - deny all other access
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }
  }
}